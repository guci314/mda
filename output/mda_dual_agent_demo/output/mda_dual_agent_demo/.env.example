# 环境配置示例文件
# 复制此文件为 .env 并修改相应配置

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/library_db

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 开发环境配置
DEBUG=True
LOG_LEVEL=info

# 安全配置（生产环境使用）
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 其他配置
MAX_BORROW_DAYS_STUDENT=30
MAX_BORROW_DAYS_TEACHER=60
MAX_BORROW_DAYS_SOCIAL=15
MAX_RENEW_COUNT=2
RESERVATION_EXPIRE_DAYS=3