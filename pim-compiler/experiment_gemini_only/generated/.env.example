# For local development, create a .env file from this example
# and securely store your production secrets.

# A long, random, and secret string.
# You can generate one with: openssl rand -hex 32
SECRET_KEY="your_super_secret_key_here"

# Database URL
# For PostgreSQL:
# DATABASE_URL="postgresql+asyncpg://user:password@host:port/dbname"
# For SQLite (default):
DATABASE_URL="sqlite+aiosqlite:///./blog.db"

# CORS Origins (comma-separated)
# e.g., BACKEND_CORS_ORIGINS="http://localhost,http://localhost:3000"
BACKEND_CORS_ORIGINS=""
