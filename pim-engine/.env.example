# Application
APP_NAME="PIM Execution Engine"
APP_VERSION="0.1.0"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database
DATABASE_URL=postgresql://pim:pim123@localhost:5432/pim_engine

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-please-change-in-production
