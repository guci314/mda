FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including Node.js for Gemini CLI
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    git \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Configure npm proxy if needed (build args)
ARG HTTP_PROXY
ARG HTTPS_PROXY
ARG NO_PROXY

# Set npm proxy if provided
RUN if [ -n "$HTTP_PROXY" ]; then npm config set proxy $HTTP_PROXY; fi
RUN if [ -n "$HTTPS_PROXY" ]; then npm config set https-proxy $HTTPS_PROXY; fi

# Install Gemini CLI globally
RUN npm install -g @google/gemini-cli

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for LLM support
RUN pip install --no-cache-dir \
    anthropic \
    aiohttp \
    httpx

# Copy application code
COPY ./src /app/src
COPY ./models /app/models
COPY ./static /app/static

# Create Gemini config directory
RUN mkdir -p /root/.gemini

# Set Python path
ENV PYTHONPATH=/app/src

# Copy Gemini configuration if provided
# This will be mounted as a volume in production
# COPY ./gemini-config.json /root/.gemini/settings.json

# Run the application
CMD ["python", "-m", "main"]