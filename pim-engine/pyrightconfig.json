{
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "**/node_modules",
        "**/__pycache__",
        "**/.*"
    ],
    "extraPaths": [
        "./src"
    ],
    "reportMissingImports": true,
    "reportMissingTypeStubs": false,
    "pythonVersion": "3.11",
    "pythonPlatform": "Linux",
    "executionEnvironments": [
        {
            "root": "src",
            "pythonVersion": "3.11",
            "extraPaths": [
                "."
            ]
        },
        {
            "root": "tests",
            "pythonVersion": "3.11", 
            "extraPaths": [
                "../src"
            ]
        }
    ]
}